{
  "compilerOptions": {
    "target": "es6",
    "lib": [ "es6", "dom" ],
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,

    "allowJs": true,
    "removeComments": false,
    "downlevelIteration": true,

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "strict": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src/"
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules/**/*",
    "dist/**/*"
  ]
}
